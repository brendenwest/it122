<h2>Home</h2>
<form method="POST" action="/detail">
    <input type="text" name="title" placeholder="title" required maxlength="100">
    <button>Search</button>
</form>
<hr>
<h3>Books</h3>

<div id="root"></div>
<script type="text/babel">

    const books = {{{books}}}
    console.log(books)

    // click event handler
    const showDetail = (event) => {
        // <a href={"/detail?title="+item.title}>
        console.log(event.target)
        console.log(event.target.innerText)
        console.log(event.target.id)
        window.location.href = "/detail?title=" + event.target.innerText;
    }

    const Books = (props) => {
        // props is an array
        console.log(props)
        const listItems = props.data.map((item) =>
        <li key={item._id} id={item._id} onClick={props.clickHandler}>
            {item.title}
        </li>);
        return <ul>{listItems}</ul>
    }

    ReactDOM.render(
        <div><Books data={books} clickHandler={showDetail} /></div>,
    document.getElementById('root')
    );

</script>
